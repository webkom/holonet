@import 'nib'

.navbar
  margin-top 15px

.bl
  background-color #000000
  height 30px

.huge
  font-size 25px


.status-panel
  &.not-responding
    border-color darken(#8b0000, 10) !important

    .panel-heading
      background-color #8b0000 !important
      border-color transparent

.no-margin
  margin 0px

.no-padding
  padding 0px

.list-group
  margin 0px

.btn-group-vertical-justified
  width 100%

  &.margin-bottom
    margin-bottom 10px

#chart
  height 350px

.modal-dialog
  width 90%
  height 80%

  .modal-content
    height 100%

    .modal-body
      height 100%
      margin-bottom: -60px;

      pre.payload
        overflow scroll
        position absolute
        right 0
        left 0
        bottom 0
        top 0
        margin-top 10px
        margin-right 10px
        margin-left 10px
        margin-bottom 70px
