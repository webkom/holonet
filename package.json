{
  "name": "holonet",
  "version": "0.0.0",
  "description": "Mail Delivery System",
  "main": "index.js",
  "scripts": {
    "build": "browserify -o holonet/assets/js/holonet.js holonet/assets/src/holonet.js",
    "watch": "watchify -d -o holonet/assets/js/holonet.js -v holonet/assets/src/holonet.js",
    "lint": "eslint holonet/assets/src && jscs holonet/assets/src",
    "bower": "bower install --allow-root"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webkom/holonet.git"
  },
  "keywords": [
    "Mail"
  ],
  "author": "Webkom Abakus <webkom@abakus.no>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webkom/holonet/issues"
  },
  "homepage": "https://github.com/webkom/holonet",
  "dependencies": {
    "flummox": "^4.0.0-alpha2",
    "react": "^0.13.3"
  },
  "devDependencies": {
    "babelify": "^6.1.1",
    "bower": "^1.4.1",
    "browserify": "^6.3.4",
    "eslint": "^0.21.1",
    "esprima-fb": "^15001.1.0-dev-harmony-fb",
    "jscs": "^1.13.1",
    "nib": "^1.1.0",
    "stylus": "^0.49.3",
    "uglify-js": "^2.4.21",
    "watchify": "^3.2.1",
    "yuglify": "^0.1.4"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {}
      ]
    ]
  },
  "jscsConfig": {
    "esnext": true,
    "preset": "airbnb",
    "esprima": "esprima-fb",
    "validateIndentation": 2,
    "safeContextKeyword": [
      "self"
    ],
    "requireCamelCaseOrUpperCaseIdentifiers": "ignoreProperties"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ],
      "no-unused-vars": [
        0
      ],
      "no-shadow": [
        0
      ]
    }
  }
}
